<!DOCTYPE html>
<html>
  <head>
    <title>Places</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

  <!-- My own CSS -->
  <link rel="stylesheet" href="/stylesheets/application.css">

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

<body>
 	
    <nav class="navbar bg-primary mb-3" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">My App</a>
        <span class="navbar-text">
            <% @user = User.find_by({ "id" => session["user_id"] }) %>
            <% if @user == nil %>
              <!-- if no user logged-in, display signup and login links -->
              <a href="/users/new" class="btn btn-primary">Sign Up</a>
              |
              <a href="/login" class="btn btn-primary">Login</a>
            <% else %>
              <!-- else, if user logged-in, display user name and logout link -->
              Logged in as <%= @user["username"] %>
              |
              <a href="/logout" class="btn btn-primary">Logout</a>
            <% end %>
        </span>
      </div>
    </nav>
  <div class=container>
    <p>
    </p>

    <div>
      <%= flash["notice"] %>
    </div>

    <%= yield %>
  </div>
</body>
  
</html>
