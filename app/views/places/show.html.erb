<div class="p-3" style="width: 200px">
<h1><%= @place["name"] %></h1>
</div>

<div class="p-3" style="width: 200px">
  <h2>My Entries</h2>
</div>

<div class="row">
  <% for entry in @entries %>
    <div class = "col-md-4">
     <div class="m-3" style="width: 200px">
        <h3><%= entry["title"] %></h3>
        <% if entry.uploaded_image.attached? %>
          <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
          <% else %>
        <% end %>
        <h4><%= entry["occurred_on"] %></h4>
        <p><%= entry["description"] %></p>
     </div>
    </div>
  <% end %>
</div>

<div class="p-3" style="width: 200px">
<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>
</div>

<div class="p-3" style="width: 200px">
<p>
  <a href="/places">Back to All Places</a>
</p>
</div>